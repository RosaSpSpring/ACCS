<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="384dp"
        android:layout_height="50dp"
        android:background="@color/colorRB"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        >

        <ImageView
            android:id="@+id/boundeddevice_back_arrow"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:layout_gravity="center_vertical"
            android:paddingBottom="20dp"
            android:paddingRight="55dp"
            android:paddingTop="20dp"
            android:src="@mipmap/arrow"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:text="已绑设备"
            android:textColor="#ffffff"
            android:textSize="19.33dp"
            android:textStyle="bold"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:layout_marginLeft="16dp"
            android:gravity="center_vertical"
            android:text="当前设备"
            android:textColor="#bdbdbd"
            android:textSize="12sp"
            />
    </LinearLayout>
    <!--这是一个divider浅色-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:layout_marginLeft="16dp"
        android:background="@color/colorBrightGray">

    </LinearLayout>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/dangqianshebeikuang"
        android:layout_width="match_parent"
        android:layout_height="66dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/dangqianshebei"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="20dp"
            android:maxLength="100"
            android:text="当前未绑定任何仪器"
            android:textColor="#212121"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <ImageView
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginEnd="18dp"
            android:src="@drawable/online"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/dangqianshebeima"
            android:layout_width="wrap_content"
            android:layout_height="16dp"
            android:layout_marginStart="16dp"
            android:gravity="center_vertical"
            android:maxLength="100"
            android:paddingLeft="1dp"
            android:text="当前仪器设备码为空"
            android:textColor="#bdbdbd"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/dangqianshebei"/>

    </android.support.constraint.ConstraintLayout>
    <!--宽的divider-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="10.5dp"
        android:background="#f5f5f5">

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:layout_marginLeft="16dp"
            android:gravity="center_vertical"
            android:text="已绑设备"
            android:textColor="#bdbdbd"
            android:textSize="12sp"
            />
    </LinearLayout>
    <!--这是一个divider浅色-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:layout_marginLeft="16dp"
        android:background="@color/colorBrightGray">

    </LinearLayout>


    <ListView
        android:id="@+id/device_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:divider="@color/colorBrightGray"
        android:dividerHeight="0.1dp">

    </ListView>
    <!--这是一个divider浅色-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:layout_marginLeft="16dp"
        android:background="@color/colorBrightGray">

    </LinearLayout>

</LinearLayout>