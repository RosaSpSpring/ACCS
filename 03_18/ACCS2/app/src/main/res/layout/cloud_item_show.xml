<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorRB"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/clouditem_iv_arrow"
            android:layout_width="61dp"
            android:layout_height="60dp"
            android:layout_gravity="center_vertical"
            android:paddingBottom="20dp"
            android:paddingRight="25dp"
            android:paddingTop="20dp"
            android:src="@mipmap/arrow"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/cloueitem_xibaomingcheng"
            style="@style/CloudItem"
            android:layout_width="84dp"
            android:text="细胞名称"/>

        <TextView
            android:id="@+id/cloueitem_chuandaishijian"
            style="@style/CloudItem"
            android:layout_width="84dp"
            android:text="传代时间"/>

        <TextView
            android:id="@+id/cloueitem_peiyangshijian"
            style="@style/CloudItem"
            android:layout_width="84dp"
            android:text="培养时间"/>

        <TextView
            android:id="@+id/cloueitem_xibaohuanyeshijian"
            style="@style/CloudItem"
            android:layout_width="84dp"
            android:text="换液时间"/>

        <TextView
            android:id="@+id/cloueitem_tupian"
            style="@style/CloudItem"
            android:layout_width="50dp"
            android:text="图片"/>
    </LinearLayout>
    <LinearLayout
        android:background="#dfdfdf"
        android:layout_width="match_parent"
        android:layout_height="0.2dp">
    </LinearLayout>
    <ListView
        android:id="@+id/clouditem_lv"
        android:divider="@null"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </ListView>




</LinearLayout>